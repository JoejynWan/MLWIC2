## making a density plot for two variables
setwd("~/Desktop/APHIS/APHIS_computer/feralSwine/genetics/mappingAncestry")
# simulate data
n <- 1000
fs <- rbeta(n, 8,5) # feral swine HTZ (put in real values)
rs <- rbeta(n, 5,10) # reference set HTZ (put in real values)

# real data
rs <- read.csv("2516_RefSet_Heterozygosity_Part1.csv")$Het.Rate.from.All.Columns
fs <- read.csv("HETEROZYGOSTIY_ContinentalOnly_95CallRate_6566x29375.csv")$HetRatefromAllColumns

ks.test(rs,fs, alternative= "greater")

# plotting parameters. Adjust these to make things prettier. 
lty_fs <- 1  # line type for feral swine. 1=solid line
lty_rs <- 2  # line type for rs. 2=dashed line
col_fs <- "red"  # line color fs
col_rs <- "black" # line color rs
lwd <- 2 # line thickness
xlab <- "Heterozygosity" # x axis label
ylab <- "Density"
title <- "" # main title for plot

# setup pdf for export (run this line, then all code below to create pdf plot)
#pdf("htz_plot_2.pdf", width=4, height=4)

# make plot
plot(density(fs), lty=lty_fs, col=col_fs, lwd=lwd, axes=FALSE, xlab=xlab, ylab=ylab, main=title,
xlim=c(0,.5), ylim=c(0,8))
lines(density(rs,  from=0), lty=lty_rs, col=col_rs, lwd=lwd)
axis(1)
#axis(2, labels=FALSE) # this axis doesn't really mean anything, so you can leave it off
# make legend. Change values in second argument to make different labels in legend
par(xpd=TRUE)
legend(0, 10, c("Invasive feral swine", "Reference samples"), lty=c(lty_fs, lty_rs), col=c(col_fs, col_rs),
       bty="n") # you might want to move the location around depending on where your actual data fall

# finalize making pdf
dev.off()
